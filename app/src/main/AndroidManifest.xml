<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beksultan.e_trans">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeAuthorization">
        <activity android:name=".ui.authorization.AuthorizationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.stockman.StockManActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.expeditor.order.OrderActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.expeditor.order.history.OrderHistoryActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.expeditor.waybill.WaybillActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.stockman.history.WaybillHistoryActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".ui.info.AdditionalInfoActivity"></activity>
    </application>

</manifest>